<div class="main-contener">
  <%= render "shared/sidebar" %>
    <div class="main-wrapper">
      <h1 class="wrapper-title">User Profile Edit</h1>
      <p class="wrapper-subtitle">ユーザー情報編集</p>
      <div class='form-wrapper'>
        <%= form_with model: @user, local: true do |f| %>
        <%= render 'shared/error_messages', model: f.object %>
          <div class="form-group">
            <label class="form-label">サムネイル画像</label>
            <br>
            <%= f.file_field :image, class:"form-input-field", id:"user-image" %>
          </div>
          <div class="form-group">
            <label class="form-label">ユーザーネーム</label>
            <br>
            <%= f.text_area :name, class:"form-input-field", id:"name", placeholder:"40文字以内、既に登録されている名前は使えません", maxlength:"40", autofocus: true %>
          </div>
          <%# <div class="form-group"> %>
            <%# <label class="form-label">一言メッセージ</label> %>
            <%# <br> %>
            <%# <%= f.text_area :message, class:"form-input-field", id:"message", placeholder:"40文字以内で入力してください", maxlength:"40" %>
          <%# </div> %>
          <div class="form-group">
            <label class="form-label">主要なジャンル</label>
            <br>
            <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"form-input-field"}) %>
          </div>
          <div class="form-group">
            <label class="form-label">フリーメッセージ</label>
            <br>
            <%= f.text_area :text, class:"form-input-field", id:"text" %>
          </div>
          <%= f.submit "ユーザー情報を更新する" ,class:"form-submit-btn" %>
        <% end %>
      </div>
      <div class="main-btn-area">
        <%= link_to "キャンセル", user_path(@user), class: "main-btn" %>
      </div>
    </div>
  </div>
</div>
<%= render "shared/footer" %>