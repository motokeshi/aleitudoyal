<%= render "shared/header" %>
<div class="main">
  <div class='form-wrap'>
    <%= form_with model: @user, local: true do |f| %>
      <h1 class="wrapper-title">User Prfile Editer</h1>
      <p class="wrapper-subtitle">ユーザー情報編集</p>

      <%= render 'shared/error_messages', model: f.object %>

      <div class="form-group">
        <label class="form-text">サムネイル画像</label>
        <%= f.file_field :image, class:"user-image", id:"user-image" %>
      </div>
      <div class="form-group">
        <label class="form-text">ユーザーネーム</label>
        <%= f.text_area :name, class:"input-default", id:"name", placeholder:"40文字以内、既に登録されている名前は使えません", maxlength:"40", autofocus: true %>
      </div>
      <div class="form-group">
        <label class="form-text">一言メッセージ</label>
        <%= f.text_area :message, class:"input-default", id:"message", placeholder:"40文字以内で入力してください", maxlength:"40" %>
      </div>
      <div class="form-group">
        <label class="form-text">フリーメッセージ</label>
        <%= f.text_area :text, class:"input-default", id:"text" %>
      </div>
        <%= f.submit "Edit OK!" ,class:"btn" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>