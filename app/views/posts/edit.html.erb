<div class="main-contener">
  <%= render "shared/sidebar"%>
  <div class="main-wrapper">
    <h1 class="wrapper-title"><%= @article.title %></h1>
    <p class="wrapper-subtitle">Doyal編集ページ</p>
    <div class='form-wrapper'>
      <%= form_with model: [@article, @post], local: true do |f| %>

        <%= render 'shared/error_messages', model: f.object %>

        <div class="form-group">
          <label class="form-label">Doyal画像</label><br>
          <%= f.file_field :image, class:"form-submit-btn-image", id:"post-image" %>
        </div>
        <div class="form-group">
          <label class="form-label">Doyal説明</label><br>
          <%= f.text_area :text, class:"form-input-field", id:"post-text", placeholder:"説明を記入してください", autofocus: true %>
        </div>
        <%= f.submit "この内容で更新する" ,class: "form-submit-btn" %>
      <% end %>
    </div>
    <div class="main-btn-area">
      <%= link_to "記事詳細ページへ戻る", article_path(@article), class: "main-btn" %>
    </div>
  </div>
</div>
<%= render "shared/footer" %>
