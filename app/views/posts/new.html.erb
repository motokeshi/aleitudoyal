<div class="main-contener">
  <%= render "shared/sidebar" %>
  <div class="main-wrapper">
    <h1 class="wrapper-title"><%= @article.title %></h1>
    <h2 class="wrapper-subtitle">Doyal memo新規追加ページ</h2>
    <div class="article-info-area">
      <% @article.posts.each do |post| %>
        <div class="post-contents">
          <% if post.image.present? %>
            <div class="post-image-area">
              <%= image_tag post.image, class: "post-image" %>
            </div>
          <% end %>
          <div class="post-text">
            <%= post.text %>
          </div>
        </div>
        <hr class="post-hr">
      <% end %>
    </div>
    <div class='form-wrapper'>
      <%= form_with model: [@article, @post], local: true do |f| %>
        <%= render 'shared/error_messages', model: f.object %>
        <div class="form-group">
          <label class="form-label">画像</label><br>
          <%= f.file_field :image, id:"post-image" %>
        </div>
        <div class="form-group">
          <label class="form-label">説明</label><br>
          <%= f.text_area :text, class:"form-textbox", id:"text", placeholder:"説明を記入してください", autofocus: true %>
        </div>
        <%= f.submit "Doyal memoを追加する" ,class: "form-submit-btn" %>
      <% end %>
    </div>
    <div class="main-btn-area">
      <%= link_to "記事詳細ページへ戻る", article_path(@article), class: "main-btn" %>
    </div>
  </div>
</div>
<%= render "shared/footer" %>
