<div class="main-contener">
  <%= render "shared/sidebar" %>
  <div class="main-wrapper">
    <h1 class="wrapper-title">Log in</h1>
    <%= form_with model: @user, url: user_session_path, class: 'session-main', local: true do |f| %>
      <div class='form-wrapper'>
        <%= render 'shared/error_messages', model: f.object %>
        <div class="form-group">
          <label class="form-label">メールアドレス</label><br>
          <%= f.email_field :email, class:"form-input-field", id:"email", placeholder:"PC・携帯どちらでも可" %>
        </div>
        <div class="form-group">
          <label class="form-label">パスワード</label><br>
          <%= f.password_field :password, class:"form-input-field", id:"password", placeholder:"6文字以上の半角英数字" %>
        </div>
        <div class='session-btn'>
          <%= f.submit "Log in!" ,class:"form-submit-btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>

