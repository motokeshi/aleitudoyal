<%= render "shared/header" %>
<div class="main">
  <%= form_with model: @user, url: user_session_path, class: 'session-main', local: true do |f| %>
    <div class='form-wrap'>
      <h2>Log in</h2>

      <%= render 'shared/error_messages', model: f.object %>

      <div class="form-group">
        <label class="form-text">メールアドレス</label>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可" %>
      </div>
      <div class="form-group">
        <label class="form-text">パスワード</label>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      </div>
      <div class='session-btn'>
        <%= f.submit "Log in!" ,class:"session-red-btn" %>
      </div>
    </div>
  <% end %>
</div>
<%= render "shared/footer" %>
