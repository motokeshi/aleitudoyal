<div class="main-contener">
  <%= render "shared/sidebar" %>
  <div class="main-wrapper">
    <h1 class="wrapper-title">新規ユーザー登録</h1>
    <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
      <div class='form-wrapper'>
        <%= render 'shared/error_messages', model: f.object %>
        <div class="form-group">
          <label class="form-label">ユーザーネーム</label><br>
          <%= f.text_field :name, class:"form-input-field", id:"name", placeholder:"40文字以内、既に登録されている名前は使えません", maxlength:"40", autofocus: true %>
        </div>
        <div class="form-group">
          <label class="form-label">メールアドレス</label><br>
          <%= f.email_field :email, class:"form-input-field", id:"email", placeholder:"PC・携帯どちらでも可" %>
        </div>
        <div class="form-group">
          <label class="form-label">パスワード</label><br>
          <%= f.password_field :password, class:"form-input-field", id:"password", placeholder:"6文字以上の半角英数字" %>
        </div>
        <div class="form-group">
          <label class="form-label">パスワード(確認用)</label><br>
          <%= f.password_field :password_confirmation, class:"form-input-field", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
        </div>
        <div class='register-btn'>
          <%= f.submit "Sign up!" ,class:"form-submit-btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>
