<%= render "shared/header" %>
<div class="root-main">
  <div class="top-wrapper">
    <%= image_tag "aleitu-hero.jpg", class: "top-hero-pict" %>
  </div>
  <% if user_signed_in? %>
    <div class="center-container">
      <div class="center-left-wrapper">
        <h2 class="wrapper-title">Reminders</h2>
        <p class="wrapper-subtitle">直近のリマインダー</p>
        <ul>
          <% @reminders.each do |reminder|%>
            <% next_schedule = reminder.next_schedule_calculation(reminder.schedule, reminder.frequency_year, reminder.frequency_month, reminder.frequency_week, reminder.frequency_day) %>
            <% if next_schedule <= (Date.today >> 1) %>
              <li class="left-wrapper-list-item">
                <div class="list-item-contents">
                  <div class="list-item-left-inner">
                    <div class="remind-date">
                      <%= reminder.schedule %>
                    </div>
                    <div class="remind-title">
                      <%= link_to reminder.title, user_reminder_path(reminder.user, reminder.id) %>
                    </div>
                  </div>
                  <div class="list-item-right-inner">
                    <div class="remind-next-schedule">
                        <%= next_schedule %>
                    </div>
                    <%= link_to "完了", "#", class: "completion btn" %>
                    <%= link_to "skip", "#", class: "skip btn" %>
                  </div>
                </div>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
      <div class="center-right-wrapper">
        <div class="right-contents-outer">
            <%= link_to "リマインダー登録", new_user_reminder_path(@user), class: "btn" %><br>
            <%= link_to "リマインダー一覧", user_reminders_path(@user), class: "btn" %><br>
            <%= link_to "記事新規投稿", "#", class: "btn" %><br>
            <%= link_to "マイ記事一覧", "#", class: "btn" %>
        </div>
        <div class="right-contents-outer">
          follow list area
        </div>
      </div>
    </div>
  <% end %>
  <div class="bottom-wrapper">
    <h2 class="wrapper-title">Recent Articles</h2>
    <p class="wrapper-subtitle">最近の投稿一覧</p>
    dammy
    dammy
  </div>
</div>
<%= render "shared/footer" %>